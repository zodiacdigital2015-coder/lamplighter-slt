<% const MAX_PROMPTS_ON_DISPLAY = 15; %>

<!DOCTYPE html>
<html>
<head>
    <title>Quality Assurance | Lamp Lighter</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />    
</head>

<body class="home-page">
    <div class="home-container" id="home-container">

        <div class="home-header">
            <div class="header-left">
                <h1 class="siteTitle">Lamp<span style="font-weight:400">Lighter: QA</span></h1>
            </div>

            <div class="header-right" style="display: flex; align-items: center; gap: 15px;">
                <span style="font-weight: 600; color: #2d3748;">
    <%= user.email %>
</span>

                <div class="action-buttons" style="display: flex; gap: 8px;">
                    <span class="btn btn-neutral btn-mini" id="show-help" title="Help">
                        <span class="material-symbols-outlined">help</span>
                    </span>

                    <% if (user.Admin) { %>
                        <a href="/admin" class="btn btn-neutral btn-mini" id="goto-dashboard" title="Admin">
                            <span class="material-symbols-outlined">settings</span>
                        </a>
                    <% } %>
                    
                    <a href="/recipes" class="btn btn-neutral btn-mini" id="goto-recipes" title="Saved Prompts">
                        <span class="material-symbols-outlined">menu_book</span>
                    </a>

                    <a href="/logout" class="btn btn-danger btn-mini" id="logout" title="Log out">
                        <span class="material-symbols-outlined">logout</span>
                    </a>
                </div>
            </div>        
        </div>

        <div id="start-again-container" class="hidden">            
            <div class="half left">
              <button class="btn btn-neutral btn-mini" id="start-again">
                <span class="material-symbols-outlined">arrow_back</span>
              </button>
            </div>
            <div class="half right" id="toggle-container-2"></div>
        </div>
        
        <div class="home-content" id="home-content">

            <div id="help-container" style="display: none;">  
                <div class="help-banner">
                    <div class="help-text" id="help-text"></div>
                    <div class="help-button-container">
                        <span class="btn btn-subtle btn-mini" id="hide-help">
                            <span class="material-symbols-outlined">done</span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="choice-container" id="choice-container">
                
                <div class="welcome-section" style="text-align: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #e2e8f0;">
                    <h2 style="font-size: 1.8rem; margin-bottom: 10px; color: #2d3748; font-weight: 600;">Quality Assurance & Enhancement</h2>
                    <p style="color: #718096; font-size: 1.1rem; max-width: 600px; margin: 0 auto; line-height: 1.5;">
                        Generate structured prompts for Self-Assessment, Inspection Prep, and general Quality Assurance tasks.
                    </p>
                </div>

                <div class="row">
                    <div class="col-1"></div>

                    <div class="col-3 dropdown-item">
                        <label for="level" class="ingredients-label">Provision Type:</label>
                        <select id="level" name="level" class="styled-input">
                            <option value="" disabled selected>Select Provision...</option>
                            <option value="16-19 Study Programmes">16-19 Study Programmes</option>
                            <option value="Adult Learning">Adult Learning</option>
                            <option value="Apprenticeships">Apprenticeships</option>
                            <option value="High Needs/SEND">High Needs / SEND</option>
                            <option value="T Levels">T Levels</option>
                            <option value="Cross-College">Cross-College / All Provision</option>
                        </select>  
                    </div>  

                    <div class="col-7 dropdown-item">
                        <label for="subject" class="ingredients-label">Curriculum Area / Dept:</label>
                        <input
                            id="subject"
                            name="subject"
                            class="styled-input"
                            type="text"
                            placeholder="e.g. Construction, Health & Social Care, Maths" />
                    </div>  

                    <div class="col-1"></div>
                </div>

                <div class="row">
                    <div class="col-1"></div>

                    <div class="col-5 dropdown-item">
                        <label for="activityCategory" class="ingredients-label">Focus Area:</label>
                        <select id="activityCategory" name="activityCategory" class="styled-input">
                            <option value="" disabled selected>Select Context...</option>
                            <option value="General Quality Assurance">General Quality Assurance</option>
                            <option value="SAR">Self Assessment Report (SAR)</option>
                            <option value="QIP">Quality Improvement Plan (QIP)</option>
                            <option value="Inspection Prep">Inspection Prep</option>
                            <option value="Deep Dive">Deep Dive</option>
                            <option value="Data Narrative">Data Narrative</option>
                        </select>  
                    </div>  

                    <div class="col-5 dropdown-item">
                        <label for="activityType" class="ingredients-label">Specific Quality Task:</label>
                        <select id="activityType" name="activityType" class="styled-input" disabled>
                            <option value="">Select Focus Area first...</option>
                        </select>  
                    </div>  

                    <div class="col-1"></div>
                </div>

 <div class="row">
                    <div class="col-1"></div>

                    <div class="col-5 dropdown-item">
                        <label for="unit" class="ingredients-label">Quality Theme / Standard:</label>
                        <input
                            id="unit"
                            name="unit"
                            type="text"
                            class="styled-input"
                            autocomplete="off"
                            placeholder="e.g. Assessment & Feedback, Behaviour, or Ofsted: Quality of Education"
                            list="judgment-options"
                        />
                        <datalist id="judgment-options">
                            <option value="Quality of Education">
                            <option value="Behaviour and Attitudes">
                            <option value="Personal Development">
                            <option value="Leadership and Management">
                            <option value="Assessment & Feedback">
                            <option value="Student Satisfaction">
                            <option value="Employer Engagement">
                        </datalist>
                    </div>

                    <div class="col-5 dropdown-item">
                        <label for="learningOutcome" class="ingredients-label">Key Headline / Impact:</label>
                        <input
                            id="learningOutcome"
                            name="learningOutcome"
                            type="text"
                            class="styled-input"
                            autocomplete="off"
                            placeholder="e.g. 'Attendance has improved by 5%' or 'Feedback is not detailed enough'"
                        />
                    </div>

                    <div class="col-1"></div>
                </div>

                <div id="categories" class="row hidden template-container"></div>          
                <div id="template-picker" class="row hidden template-container">
                    <div class="col-12" id="template-list"></div>                    
                </div>

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10 dropdown-item">
                        <label for="topic" class="ingredients-label">Context / Description of Evidence:</label>
                        <div class="topic-container">
                            <textarea
                                id="topic"
                                name="topic"
                                class="styled-input"
                                autocomplete="off"
                                style="height: 120px;"
                                placeholder="Briefly describe what you are analyzing. Example: 'I will be uploading the draft Construction SAR' or 'I have a spreadsheet of Level 3 attendance data'. (You will upload the actual files in the next step)."></textarea>    
                        </div>            
                    </div>
                    <div class="col-1"></div>
                </div>

                <div class="row">
                    <div class="col-12 submit-button">
                        <button class="btn btn-primary" id="generate-button">
                            <div class="material-symbols-outlined response-icon">auto_awesome</div>
                            Generate Inspection Prompt
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12" style="text-align: center; margin-top: 8px;">
                        <p class="field-help" style="margin-top: 1rem; font-size: 0.9rem; color: #718096; text-align: center;">
                            This tool structures your evidence for the Quality GPT. Copy the result and paste it there.
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <div style="text-align: center; padding-top: 25px;" id="toggle-container-1" class="hidden">
                            <div class="copy-toggle-switch" id="copy-toggle" >
                                <input type="checkbox" id="copyToggleCheckbox" />
                                <label class="copy-toggle-switch-label" for="copyToggleCheckbox">
                                    <div class="copy-toggle-switch-inner">
                                        <span>Copy plain text</span>
                                        <span>Copy ChatGPT link</span>
                                    </div>
                                    <div class="copy-toggle-switch-switch"></div>
                                </label>
                            </div>
                        </div>
                        <div class="loader-container hidden" id="recipe-loader">
                            <div class="loader"></div>
                        </div>
                        <div id="shared-recipes"></div>
                        <div id="private-recipes"></div>
                    </div>  
                    <div class="col-1"></div>
                </div>
            
            </div>
            
<% for (let i = 1; i <= MAX_PROMPTS_ON_DISPLAY; i++) { %>

            <div class="response-container hidden" id="response-container-<%= i %>">
                <div class="response-text-container" id="response-text-container-<%= i %>">
                    
                    <div class="response-heading">
                        <div class="response-heading-text" id="response-heading-text-<%= i %>"></div>
                        <div class="response-reason-button">
                            <div class="speech-bubble" id="response-reason-<%= i %>"></div>
                            <button id="reason-button-<%= i %>" class="btn btn-subtle btn-mini"><span class="material-symbols-outlined">psychology_alt</span></button>
                        </div>                        
                    </div>

                    <div class="prompt-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 15px;">
                        
                        <div class="prompt-box copilot-box" style="border: 2px solid #0078D4; border-radius: 8px; padding: 15px; background: #f3f9fd;">
                            <div style="display:flex; align-items:center; gap:8px; margin-bottom:10px; color:#0078D4; font-weight:bold;">
                                <span class="material-symbols-outlined">cloud_done</span> Microsoft Copilot
                            </div>
                            <div class="response-text" id="copilot-text-<%= i %>" style="font-size: 0.95rem; white-space: pre-wrap;"></div>
                            <button id="copy-copilot-<%= i %>" class="btn btn-primary btn-mini" style="width:100%; margin-top:10px; background-color: #0078D4;">
                                Copy for Copilot
                            </button>
                        </div>

                        <div class="prompt-box chatgpt-box" style="border: 2px solid #10a37f; border-radius: 8px; padding: 15px; background: #f0fdf9;">
                            <div style="display:flex; align-items:center; gap:8px; margin-bottom:10px; color:#10a37f; font-weight:bold;">
                                <span class="material-symbols-outlined">bolt</span> ChatGPT
                            </div>
                            <div class="response-text" id="chatgpt-text-<%= i %>" style="font-size: 0.95rem; white-space: pre-wrap;"></div>
                            <button id="copy-chatgpt-<%= i %>" class="btn btn-primary btn-mini" style="width:100%; margin-top:10px; background-color: #10a37f;">
                                Copy for ChatGPT
                            </button>
                        </div>

                    </div>
                    
                    <div class="original-header hidden" id='original-header-<%= i %>'>Original</div>
                    <div id='original-prompt-container-<%= i %>' class="hidden"></div>  

                </div> 
                
                <div class="response-option-container">                    
                    <div class="loader-container hidden" id="little-loader-<%= i %>">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>

            <% } %>

            <div id="generate-more-container" class="row hidden" style="padding-top: 20px;">
                <div class="col-4"></div>        
                <div class="col-4 submit-button">
                    <button class="btn btn-primary" id="generate-more-button">
                        <div class="material-symbols-outlined response-icon">edit_note</div>
                        Generate<strong>&nbsp;more&nbsp;</strong>prompts
                    </button>
                </div>        
                <div class="col-4"></div>
            </div>

        </div>

        <div class="loader-container hidden" id="main-loader">
            <div class="loader"></div>
        </div>

    </div>

    <div id="modal" class="modal">
      <div class="modal-content">        
        <div id="modal-output"></div>
        <div class="loader-container hidden" id="modal-loader">
            <div class="loader"></div>
        </div>
        <div id="modal-input">
            <input type="text" id="modal-prompt" autocomplete="off">
        </div>        
        <div class="button-group">
            <span id="modal-close" class="btn btn-neutral btn-mini"><span class="material-symbols-outlined">close</span></span>
            <button id="continue-button" class="btn btn-primary btn-mini"><span class="material-symbols-outlined">resume</span></button>
        </div>
      </div>
    </div>

    <div class="scroll-indicator hidden" id="scroll-indicator">
        <span class="material-symbols-outlined">arrow_downward</span>
    </div>

    <script id="MathJax-script" async src="/tex-chtml.js"></script>
    <script src="/toast.js"></script>
    <script src="/comments.js"></script>
    <script src="/homeHelpers.js"></script>
    <script src="/homeRecipes.js"></script>
    <script src="/homeGenerators.js"></script>
    <script src="/home.js"></script>

</body>
</html>